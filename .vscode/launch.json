{
  // IntelliSense を使用して利用可能な属性を学べます。
  // 既存の属性の説明をホバーして表示します。
  // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest Target Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "protocol": "inspector",
      "args": [
        "--runInBand",
        "--forceExit",
        "--detectOpenHandles",
        "./packages/webrtc/tests"
      ],
      "windows": {
        "program": "${workspaceRoot}/node_modules/jest/bin/jest.js"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ts-node",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node-dev/lib/bin.js",
      "protocol": "inspector",
      "args": [
        "--project",
        "${workspaceRoot}/tsconfig.json",
        "${workspaceRoot}/examples/mediachannel/red/sendrecv.ts"
      ],
      "env": { "DEBUG": "werift*" },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "interop:client",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node-dev/lib/bin.js",
      "protocol": "inspector",
      "args": [
        "--project",
        "${workspaceRoot}/tsconfig.json",
        "${workspaceRoot}/examples/interop/client.ts"
      ],
      "env": { "DEBUG": "*" },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "interop:client-datachannel",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node-dev/lib/bin.js",
      "protocol": "inspector",
      "args": [
        "--project",
        "${workspaceRoot}/tsconfig.json",
        "${workspaceRoot}/examples/interop/client.ts",
        "-t",
        "1"
      ],
      "env": { "DEBUG": "*" },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "interop:sever",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node-dev/lib/bin.js",
      "protocol": "inspector",
      "args": [
        "--project",
        "${workspaceRoot}/tsconfig.json",
        "${workspaceRoot}/examples/interop/server.ts"
      ],
      "env": { "DEBUG": "werift*" },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "e2e-server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node-dev/lib/bin.js",
      "protocol": "inspector",
      "args": [
        "--files",
        "--project",
        "${workspaceRoot}/tsconfig.json",
        "${workspaceRoot}/e2e/server/main.ts"
      ],
      "env": { "DEBUG": "werift*" },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
